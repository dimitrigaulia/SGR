# Stage 1: Build Angular
FROM node:20-alpine AS build
WORKDIR /app

# Copiar arquivos de dependências
COPY web/package*.json ./
RUN npm ci

# Copiar código fonte
COPY web/ ./

# Build da aplicação Angular
RUN npm run build

# Normalizar saída do Angular em /out (independe do nome do projeto e do /browser)
RUN set -eux; \
    mkdir -p /out; \
    if find /app/dist -maxdepth 2 -type d -name browser | grep -q .; then \
      BROWSER_DIR="$(find /app/dist -maxdepth 2 -type d -name browser | head -n 1)"; \
      cp -r "$BROWSER_DIR"/* /out/; \
    else \
      APP_DIR="$(find /app/dist -maxdepth 1 -mindepth 1 -type d | head -n 1)"; \
      cp -r "$APP_DIR"/* /out/; \
    fi

# Stage 2: Serve com Nginx
FROM nginx:alpine AS final
WORKDIR /usr/share/nginx/html

# Remover arquivos padrão do Nginx
RUN rm -rf ./*

# Copiar arquivos buildados (sempre em /out)
COPY --from=build /out/ .

# Copiar configuração customizada do Nginx para SPA
COPY nginx/web.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
